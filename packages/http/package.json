{
  "name": "@sandcastle/http",
  "version": "0.1.0",
  "description": "HTTP server for Sandcastle RPC endpoints.",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "exports": {
    ".": "./index.ts",
    "./server": "./src/server.ts"
  },
  "scripts": {
    "start": "bun run src/server.ts",
    "dev": "bun --watch run src/server.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "effect": "^3.19.14",
    "@effect/rpc": "^0.73.0",
    "@effect/platform": "^0.94.1",
    "@effect/platform-bun": "^0.87.0",
    "@sandcastle/rpc": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  }
}
