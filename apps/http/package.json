{
	"name": "@sandcastle/http",
	"version": "0.1.0",
	"description": "HTTP server for Sandcastle RPC endpoints.",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"exports": {
		".": "./index.ts",
		"./server": "./src/server.ts"
	},
	"scripts": {
		"start": "bun run src/server.ts",
		"dev": "bun --watch run src/server.ts",
		"test": "bun test",
		"typecheck": "tsc --noEmit",
		"biome": "biome check --write .",
		"biome:check": "biome check ."
	},
	"dependencies": {
		"@anthropic-ai/claude-agent-sdk": "^0.2.5",
		"@anthropic-ai/sdk": "^0.71.2",
		"@effect/platform": "^0.94.1",
		"@effect/platform-bun": "^0.87.0",
		"@effect/rpc": "^0.73.0",
		"@sandcastle/schemas": "workspace:*",
		"@sandcastle/petname": "workspace:*",
		"@sandcastle/rpc": "workspace:*",
		"@sandcastle/storage": "workspace:*",
		"@sandcastle/worktree": "workspace:*",
		"effect": "^3.19.14",
		"fzf": "^0.5.2"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"typescript": "^5.9.3"
	}
}
