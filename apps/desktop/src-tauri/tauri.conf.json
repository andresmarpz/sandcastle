{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Sandcastle",
	"version": "0.1.0-beta.1",
	"identifier": "run.sandcastle.desktop",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "Sandcastle",
				"width": 1440,
				"height": 900,
				"minWidth": 800,
				"minHeight": 600,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"license": "Apache-2.0",
		"copyright": "Â© 2025 Andres Martinez",
		"category": "DeveloperTools",
		"shortDescription": "The loop manager for your agents.",
		"longDescription": "Sandcastle is the loop manager for your agents. A developer tool for managing and orchestrating AI agent workflows.",
		"homepage": "https://github.com/andresmarpz/sandcastle",
		"macOS": {
			"minimumSystemVersion": "10.15"
		},
		"linux": {
			"section": "devel"
		}
	}
}
